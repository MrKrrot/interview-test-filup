{
  "name": "filup-mid-full-stack-interview",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "MrKrrot",
  "license": "MIT",
  "workspaces": [
    "client"
  ],
  "scripts": {
    "build": "npm run build:api && npm run build:client",
    "build:api": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:client": "cd client && npm run build",
    "dev:api": "nodemon --inspect src/index.ts",
    "dev:client": "cd client && npm run dev",
    "start:api": "cross-env NODE_ENV=production node dist/index.js",
    "start:client": "cd client && npm run preview",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx .",
    "prepare": "husky install",
    "prettier": "prettier --check \"**/*.tsx\" --check \"**/*.ts\" --check \"**/*.js\"",
    "prettier:fix": "prettier --write \"**/*.tsx\" --write \"**/*.ts\" --write \"**/*.js\""
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-list-endpoints": "^6.0.0",
    "helmet": "^7.0.0",
    "ip": "^2.0.0",
    "mongoose": "^7.2.2",
    "winston": "^3.9.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-list-endpoints": "^6.0.0",
    "@types/ip": "^1.1.0",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
